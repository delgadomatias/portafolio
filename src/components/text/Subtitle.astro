---
import { cn } from "@utils/cn";
import type { HTMLAttributes } from "astro/types";

export interface Props extends HTMLAttributes<"h2"> {}

const { class: className, ...rest } = Astro.props;
---

<h2
  class={cn(
    "font-sans font-semibold text-2xl md:text-3xl lg:text-4xl text-secondary",
    className,
  )}
  {...rest}
>
  <slot />
</h2>
