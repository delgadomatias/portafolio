---
import Subtitle from "@components/text/Subtitle.astro";
export interface Props {
  title: string;
  items: number;
}

const { title, items } = Astro.props;
---

<div class="p-container">
  <Subtitle>{title}</Subtitle>
  <article class="text-white grid grid-cols-[10%_90%] auto-rows-auto mt-6">
    <div class="h-full bg-white/[0.5] w-[3px] relative">
      <div class="absolute h-full w-full flex-col flex items-center gap-8">
        {
          Array.from({ length: items }).map(() => {
            return (
              <div class="flex-1 flex items-center justify-between  ">
                <div class="h-6 w-6 rounded-full bg-white border-4 border-paragraphHighlight" />
              </div>
            );
          })
        }
      </div>
    </div>

    <div class="grid gap-8">
      <slot />
    </div>
  </article>
</div>
