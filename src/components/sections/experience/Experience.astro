---
import Section from "@components/layout/Section.astro";
import ExperienceContainer from "./ExperienceContainer.astro";
import ExperienceItem from "./ExperienceItem.astro";

const EXPERIENCE = [
  {
    title: "Trabajo",
    items: [
      {
        title: "Frontend Developer",
        subTitle: "Teclearla",
        description:
          "Teclearla es mi iniciativa para ganar experiencia como desarrollador independiente, en la misma desarrolle paginas webs a distintos clientes.",
        date: "2023 - Presente",
      },
    ],
  },
  {
    title: "Educación",
    items: [
      {
        title: "Ingeniería en Sistemas",
        subTitle: "Universidad Nacional de Ingeniería",
        description:
          "Actualmente estoy estudiando la carrera y estoy en el cuarto año de la misma. Si todo sale de acuerdo al plan en dos años me estaré graduando.",
        date: "2021 - Presente",
      },
      {
        title: "Secundaria",
        subTitle: "IPET 49 - Escuela Técnica",
        description:
          "Estudié en el IPET 49, cuya escuela es particular en la zona: es una escuela tecnica, realice una especialidad bastante alejada al desarrollo de software.",
        date: "2015 - 2020",
      },
    ],
  },
];
---

<Section
  title="Experiencia"
  class="container"
  id="experience"
  description="Mi experiencia laboral y educativa."
>
  <div class="flex flex-col gap-12 mt-8">
    {
      EXPERIENCE.map(({ title, items }) => {
        return (
          <ExperienceContainer title={title} items={items.length}>
            {items.map((item) => {
              return <ExperienceItem {...item} />;
            })}
          </ExperienceContainer>
        );
      })
    }
  </div>
</Section>
